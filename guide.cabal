name:                guide
version:             0.1.0.0
synopsis:            A site for comparing Haskell libraries
description:
  A site for comparing Haskell libraries
homepage:            http://github.com/aelve/guide
bug-reports:         http://github.com/aelve/guide/issues
license:             BSD3
license-file:        LICENSE
author:              Artyom
maintainer:          yom@artyom.me
-- copyright:           
category:            Web
tested-with:         GHC == 7.10.3
build-type:          Simple
extra-source-files:
  CHANGELOG.md
data-files:
  static/*.svg
  static/*.css
  static/*.md
  static/*.html
cabal-version:       >=1.10

source-repository head
  type:                git
  location:            git://github.com/aelve/guide.git

executable guide
  main-is:             Main.hs
  other-modules:
    Config
    Types
    Utils
    Markdown
    JS
    View
  -- other-extensions:    
  build-depends:       MonadRandom == 0.4.*
                     , Spock
                     , Spock-lucid == 0.2.*
                     , acid-state == 0.14.*
                     , aeson == 0.11.*
                     , aeson-pretty == 0.7.*
                     , base >=4.8 && <4.9
                     , base-prelude
                     , blaze-builder
                     , bytestring
                     , cheapskate
                     , cheapskate-highlight == 0.1.*
                     , cheapskate-lucid == 0.1.*
                     , containers >= 0.5
                     , data-default >= 0.5
                     , directory >= 1.2
                     , ekg
                     , ekg-core
                     , feed >= 0.3.11 && < 0.4
                     , filepath
                     , friendly-time == 0.4.*
                     , http-types
                     , iproute == 1.7.*
                     , lucid >= 2.9.5 && < 3
                     , megaparsec
                     , microlens-platform >= 0.2.3
                     , mmorph == 1.*
                     , mtl >= 2.1.1
                     , neat-interpolation == 0.3.*
                     , network
                     , path-pieces
                     , random >= 1.1
                     , safecopy
                     , shortcut-links >= 0.4.2
                     , template-haskell
                     , text
                     , text-format
                     , time >= 1.5
                     , transformers
                     , wai
                     , wai-middleware-metrics
                     , wai-middleware-static
                     , xml
                     , xss-sanitize
  ghc-options:         -Wall -fno-warn-unused-do-bind
                       -threaded "-with-rtsopts=-T -N"
  hs-source-dirs:      src
  default-language:    Haskell2010
